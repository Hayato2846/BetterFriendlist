<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<!-- BetterFriendlist Settings Side Panel (Classic Version) -->
	<Frame name="BetterFriendlistSettingsFrame" parent="BetterFriendsFrame" inherits="ButtonFrameTemplate" hidden="true" frameStrata="HIGH" enableMouse="true" movable="false" toplevel="false">
		<Size x="800" y="550" />
		<Anchors>
			<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" x="5" y="0" />
		</Anchors>
		<Frames>
			<!-- Navigation List (Left Side) -->
			<Frame parentKey="CategoryList">
				<Anchors>
					<Anchor point="TOPLEFT" x="10" y="-30" />
					<Anchor point="BOTTOMLEFT" x="10" y="10" />
				</Anchors>
				<Size x="150" y="0"/> <!-- Width will be set dynamically -->
			</Frame>

			<!-- Single Main Inset Frame - contains everything -->
			<Frame parentKey="MainInset" mixin="BackdropTemplateMixin">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.CategoryList" relativePoint="TOPRIGHT" x="10" y="0" />
					<Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT" x="-10" y="10" />
				</Anchors>
				<Scripts>
					<OnLoad>
						self:SetBackdrop({
							edgeFile = "Interface\\DialogFrame\\UI-DialogBox-Border",
							tile = true,
							tileSize = 16,
							edgeSize = 6,
							insets = { left = 1, right = 1, top = 1, bottom = 1 }
						})
						self:SetBackdropBorderColor(0.4, 0.4, 0.4, 0.8)
					</OnLoad>
				</Scripts>
			</Frame>
			
			<!-- Content Scroll Frame - anchored to MainInset -->
			<ScrollFrame parentKey="ContentScrollFrame" inherits="UIPanelScrollFrameTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.MainInset" relativePoint="TOPLEFT" x="8" y="-5" />
					<Anchor point="BOTTOMRIGHT" relativeKey="$parent.MainInset" relativePoint="BOTTOMRIGHT" x="-25" y="1" />
				</Anchors>
				<ScrollChild>
					<Frame parentKey="Content">
						<Size x="600" y="600" />
						<Frames>
							<!-- General Tab Content -->
							<Frame parentKey="GeneralTab" hidden="false">
								<Anchors>
									<Anchor point="TOPLEFT" />
									<Anchor point="BOTTOMRIGHT" />
								</Anchors>
							</Frame>
							
							<!-- Fonts Tab Content -->
							<Frame parentKey="FontsTab" hidden="true">
								<Anchors>
									<Anchor point="TOPLEFT" />
									<Anchor point="BOTTOMRIGHT" />
								</Anchors>
							</Frame>
								
							<!-- Groups Tab Content -->
							<Frame parentKey="GroupsTab" hidden="true">
								<Anchors>
									<Anchor point="TOPLEFT" />
									<Anchor point="BOTTOMRIGHT" />
								</Anchors>
							</Frame>
						
							<!-- Advanced Tab Content -->
							<Frame parentKey="AdvancedTab" hidden="true">
								<Anchors>
									<Anchor point="TOPLEFT" />
									<Anchor point="BOTTOMRIGHT" />
								</Anchors>
							</Frame>
					
							<!-- Statistics Tab Content -->
							<Frame parentKey="StatisticsTab" hidden="true">
								<Anchors>
									<Anchor point="TOPLEFT" />
									<Anchor point="BOTTOMRIGHT" />
								</Anchors>
							</Frame>
							

							<!-- Data Broker Tab Content (STABLE) -->
							<Frame parentKey="BrokerTab" hidden="true">
								<Anchors>
									<Anchor point="TOPLEFT" />
									<Anchor point="BOTTOMRIGHT" />
								</Anchors>
							</Frame>
							
							<!-- Global Sync Tab Content (BETA) -->
							<Frame parentKey="GlobalSyncTab" hidden="true">
								<Anchors>
									<Anchor point="TOPLEFT" />
									<Anchor point="BOTTOMRIGHT" />
								</Anchors>
							</Frame>

							<!-- Streamer Tab Content -->
							<Frame parentKey="StreamerTab" hidden="true">
								<Anchors>
									<Anchor point="TOPLEFT" />
									<Anchor point="BOTTOMRIGHT" />
								</Anchors>
							</Frame>
						</Frames>
					</Frame>
				</ScrollChild>
			</ScrollFrame>

			<!-- Button Separator Line -->
			<Frame parentKey="ButtonSeparator">
				<Size x="0" y="1"/>
				<Anchors>
					<Anchor point="BOTTOMLEFT" relativeKey="$parent.MainInset" relativePoint="BOTTOMLEFT" x="5" y="0"/>
					<Anchor point="BOTTOMRIGHT" relativeKey="$parent.MainInset" relativePoint="BOTTOMRIGHT" x="-5" y="0"/>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<Texture>
							<Color r="0.25" g="0.25" b="0.25" a="1"/>
						</Texture>
					</Layer>
				</Layers>
			</Frame>
			
		</Frames>
		<Scripts>
			<OnLoad>
				-- Hide portrait (ButtonFrameTemplate creates one automatically)
				if self.portrait then
					self.portrait:Hide()
				end
				if self.PortraitContainer then
					self.PortraitContainer:Hide()
				end
				
				-- Set title
				if self.TitleContainer and self.TitleContainer.TitleText then
					self.TitleContainer.TitleText:SetText("BetterFriendlist Settings")
				end
				
				-- Setup ButtonFrameTemplate
				if ButtonFrameTemplate_HidePortrait then
					ButtonFrameTemplate_HidePortrait(self)
				end
				if ButtonFrameTemplate_HideAttic then
					ButtonFrameTemplate_HideAttic(self)
				end
				
				-- Hide the default Inset (we use MainInset instead)
				if self.Inset then
					self.Inset:Hide()
				end
				
				-- Initialize
				if BetterFriendlistSettings_OnLoad then
					BetterFriendlistSettings_OnLoad()
				end
			</OnLoad>
			<OnDragStart>
				self:StartMoving()
			</OnDragStart>
			<OnDragStop>
				self:StopMovingOrSizing()
			</OnDragStop>
		</Scripts>
	</Frame>
</Ui>
