package-as: BetterFriendlist

enable-nolib-creation: no

# Release channel: alpha, beta, or release
release-type: release

# External libraries
externals:
  Libs/LibStub:
    url: https://repos.curseforge.com/wow/libstub/trunk
    tag: 1.0
  Libs/LibEditMode:
    url: https://github.com/p3lim-wow/LibEditMode
    tag: latest
  Libs/LibSharedMedia-3.0:
    url: https://repos.curseforge.com/wow/libsharedmedia-3-0/trunk
    tag: latest

ignore:
  - .git
  - .github
  - .gitignore
  - .pkgmeta
  - README.md
  - CHANGELOG.md
  - RELEASE_NOTES_v1.0.md
  - RELEASE_WORKFLOW_SETUP.md
  - docs
  - predecessor
  - reference
  - "*.md"
  - BUG_*.md
  - COMBAT_*.md
  - FRIENDGROUPS_*.md
  - IMPLEMENTATION_*.md
  - MASTER_*.md
  - MIGRATION_*.md
  - MODULARIZATION_*.md
  - RAID_FRAME_*.md
  - SETTINGS_*.md
  - TESTING_*.md
  - v1.0-finalization-plan.md
  - plans
  - .ai-context
  - .vscode

manual-changelog:
  filename: CHANGELOG.md
  markup-type: markdown
